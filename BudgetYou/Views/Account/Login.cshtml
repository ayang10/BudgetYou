@using BudgetYou.Models
@model LoginViewModel

    @{
        <title>FamBuget - Login</title>
        ViewBag.Title = "Budget-You - Log in";
        Layout = null;
        <!-- Favicon -->
        <link rel="shortcut icon" href="~/theme/img/budgetbulb.png">
        <!-- Bootstrap CSS -->
        <link href="~/theme/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font awesome CSS -->
        <link href="~/theme/css/font-awesome.min.css" rel="stylesheet">
    <!-- Custom Color CSS -->
        <link href="~/theme/css/less-style.css" rel="stylesheet">
    <!-- Custom CSS -->
        <link href="~/theme/css/style.css" rel="stylesheet">

        <!-- Javascript files -->
    <!-- jQuery -->
        <script src="~/theme/js/jquery.js" type="text/javascript"></script>
    <!-- Bootstrap JS -->
        <script src="~/theme/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- Respond JS for IE8 -->
        <script src="~/theme/js/respond.min.js" type="text/javascript"></script>
    <!-- HTML5 Support for IE -->
        <script src="~/theme/js/html5shiv.js" type="text/javascript"></script>
    }

<div class="outer-page">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <!-- Login page -->
        <div class="login-page">

            <!-- Nav tabs -->
            <ul class="nav nav-tabs nav-justified">
                <li class="active"><a href="" data-toggle="tab" class="br-lblue"><i class="fa fa-sign-in"></i> FamBudget - Sign In</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane fade active in" id="login">

                    <!-- Login form -->

                        <p class="text-success">@ViewBag.StatusMessage</p>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email)

                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="col-sm-9" style="padding-left: 20px;">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>
                        </div>
                        <input type="submit" value="Log in" class="btn btn-primary" />
                        <input type="reset" class="btn btn-default" />
                    @Html.ActionLink("Demo", "DemoIndex", "Demo", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-success" })
                    <div style="position: relative; padding-top:10px; padding-bottom:20px;">
                        <p>@Html.ActionLink("Register as a new user", "Register")</p>
                        <section id="socialLoginForm">
                            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                        </section>
                    </div>
                </div>


            </div>

        </div>

    }

    </div>


