<body>

    <div class="outer">

        <!-- Sidebar starts -->
        <div class="sidebar">

            <div class="sidey">

                <!-- Logo -->
                <div class="logo">

                    <h1>@Html.ActionLink("Budget-You", "Index", "Home", routeValues: null, htmlAttributes: new { id = "loginLink" })</h1>

                </div>

                <!-- Sidebar navigation starts -->

                <div class="sidebar-dropdown"><a href="#" class="br-blue"><i class="fa fa-bars"></i></a></div>

                <div class="side-nav">

                    <div class="side-nav-block">
                        <!-- Sidebar heading -->
                        <h4>Main</h4>
                        <!-- Sidebar links -->
                        <ul class="list-unstyled">
                            <li><a href="@Url.Action("DemoIndex", "Demo")"><i class="fa fa-home"></i>Dashboard</a></li>
                            <li><a href="@Url.Action("DemoAbout", "Demo")"><i class="fa fa-home"></i>About</a></li>
                            <li><a href="@Url.Action("DemoHousehold", "Demo")"><i class="fa fa-h-square"></i>HouseHold</a></li>
                            <li><a href="@Url.Action("DemoAccount", "Demo")"><i class="fa fa-university"></i>Accounts</a></li>
                            <li><a href="@Url.Action("DemoTransaction", "Demo")"><i class="fa fa-credit-card"></i>Transactions</a></li>
                            <li><a href="@Url.Action("DemoBudget", "Demo")"><i class="fa fa-google-wallet"></i>Budget</a></li>
                            <li><a href="@Url.Action("DemoBudgetItem", "Demo")"><i class="fa fa-sitemap"></i>BudgetItems</a></li>
                            <li><a href="@Url.Action("DemoInvitation", "Demo")"><i class="fa fa-scissors"></i>Invitations</a></li>

                        </ul>
                    </div>




                </div>

                <!-- Sidebar navigation ends -->

            </div>
        </div>
        <!-- Sidebar ends -->
        <!-- Mainbar starts -->
        <div class="mainbar">

            <!-- Mainbar head starts -->
            <div class="main-head">

                <div class="container">

                    <div class="row">
                        <div class="col-md-3 col-sm-4 col-xs-6">
                            <!-- Page title -->

                            <h2><i class="fa fa-desktop lblue"></i> Dashboard</h2>
                        </div>

                        <div class="col-md-3 col-sm-4 col-xs-6">
                            <p>@DateTime.Now.ToString("D")</p>
                        </div>

                        <div class="col-md-3 col-sm-4 hidden-xs">

                            <div class="clearfix"></div>
                        </div>


                        <ul class="nav navbar-nav pull-right">
                            <li>@Html.ActionLink("Hello [Your Email/Username]", "DemoManage", "Demo")</li>
                            <li>@Html.ActionLink("Log off", "Index", "Home")</li>

                        </ul>

                    </div>
                </div>

            </div>

            <!-- Mainbar head ends -->
            <div class="main-content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">

                            <h1>
                                Demo Display only, Not Functional.
                            </h1>
                        </div>
                    </div>
                </div>
                <br />
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                           
                            <div class="container">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">My Household</h4>
                                    </div>
                                    <section class="panel-body">
                                        <h1><b><center>My Household: CupCake</center></b></h1>
                                    </section>
                                </div>


                                <div class="container">
                                    <div class="row">

                                        <div class="col-md-6">
                                            <div class="panel panel-primary">
                                                <div class="panel-heading">
                                                    <h4 class="panel-title">Members</h4>
                                                </div>
                                                <section class="panel-body">
                                                    <h5>All members of this household</h5>
                                                    <div class="table-responsive">
                                                        <table class="table table-striped table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th>
                                                                        Name
                                                                    </th>

                                                                    <th>
                                                                        Email
                                                                    </th>
                                                                </tr>
                                                            </thead>
                                                           
                                                                <tbody>
                                                                    <tr>
                                                                        <td>
                                                                            dummie 
                                                                            dum
                                                                        </td>
                                                                        <td>
                                                                            dummie1@gmail.com

                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            dummie1
                                                                            dum
                                                                        </td>
                                                                        <td>
                                                                            dummie@gmail.com

                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                          
                                                        </table>
                                                    </div>
                                                </section>
                                            </div>
                                        </div>

                                        <div class="col-md-5 pull-right">
                                            <div class="panel panel-primary">
                                                <div class="panel-heading">
                                                    <h4 class="panel-title">About Households</h4>
                                                </div>
                                                <section class="panel-body">
                                                    <table>
                                                        <tr>
                                                            Households are how we group accounts and users.
                                                        </tr>
                                                        <tr>
                                                            Each user belongs to only 1 household, but the household can have many users.
                                                        </tr>
                                                        <tr>
                                                            Each user in your household has full access to all account data.
                                                        </tr>
                                                    </table>

                                                </section>
                                            </div>
                                        </div>



                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="panel panel-primary">
                                                <div class="panel-heading">
                                                    <h4 class="panel-title">Invite</h4>
                                                </div>
                                                <section class="panel-body">
                                                    <h5>Invite another user to join your household</h5>
                                                    <form id="contact-form" action="" method="post">

                                                        <div>
                                                            <label for="email">Email</label>
                                                            <input type="email" class="form-control" name="Email" />
                                                            <input type="hidden" name="HouseholdId" ><br />
                                                        </div>
                                                        <div>
                                                            <button class="btn btn-sm btn-success">Send Invite</button>
                                                        </div>
                                                        <p class="text-success ">@ViewBag.SuccessMessage</p>
                                                    </form>
                                                </section>
                                            </div>

                                            <div class="panel panel-primary">
                                                <div class="panel-heading">
                                                    <h4 class="panel-title">Leave</h4>
                                                </div>
                                                <section class="panel-body">
                                                    <h5>Leave your current household and start a new one</h5>
                                                    <br />
                                                    <!-- Are you sure you want to leave household modal -->
                                                    <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#myModal">Leave this Household</button>
                                                </section>
                                            </div>
                                        </div>



                                    </div>


                                </div>
                                <!-- Modal -->
                                <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <!-- Modal content-->
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <h4 class="panel-title">Leave Household</h4>
                                            </div>
                                            <div class="panel-body">
                                                <form method="Post" action="">
                                                    <h5>Are you sure you want to leave this household? This cannot be undone.</h5>
                                                    <br />
                                                    <input type="submit" value="Leave this Household" class="btn btn-sm btn-danger pull-right" />
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <br />

               


            </div>
        </div>

    </div>



