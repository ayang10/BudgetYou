@model IEnumerable<BudgetYou.Models.Account>

@{
    ViewBag.Title = "Index";
}
<br />
<div class="container">
    
    <p>
        @Html.ActionLink("+ Add Account", "Create", null, new { @class ="btn btn-success"})
    </p>
</div>
<br>

<div class="container">
    <div class="row">

        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4 class="panel-title">Accounts</h4> 
                </div>
                <div class="widget-body no-padd">

                    <div class="table-responsive">
                        <table class="table table-hover table-bordered ">
                            <thead>
                                <tr>
                                    <th>Account Name</th>
                                    <th>@Html.DisplayNameFor(model => model.Balance)</th>
                                    <th>@Html.DisplayNameFor(model => model.CreationDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.WarningBalance)</th>
                                    <th>@Html.DisplayNameFor(model => model.ReconcileBalance)</th>
                                    <th>Control</th>
                                </tr>
                            </thead>

                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)

                                        </td>
                                        <td>
                                            @string.Format("{0:C}", item.Balance)
                                        </td>
                                        <td>
                                            @item.CreationDate.ToString("D")
                                        </td>
                                        <td>
                                            @string.Format("{0:C}", item.WarningBalance)
                                        </td>
                                        <td>
                                            @string.Format("{0:C}", item.ReconcileBalance)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Accounts", new { id = item.Id })"><i class="fa fa-pencil btn btn-sm btn-warning"></i></a>
                                            <a href="@Url.Action("Delete", "Accounts", new { id = item.Id })"><i class="fa fa-times btn btn-sm btn-danger"></i></a>

                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                        </div>
                    </div>
                    </div>

                </div>
            </div>
    
        </div>
